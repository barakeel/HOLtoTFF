  (* hypothesis list *) 
  (* concl *)
(∀y. P y) ⇒ P (λx. x + 1)

(* Conversion theorem *)
 []
|- ¬((∀y. P y) ⇒ P (λx. x + 1)) ⇔
   ∃x.
     ∀f y.
       (¬P f ∨ 0 ≤ x f) ∧ (P y ∨ 0 ≤ x f) ∧
       (P y ∨ ¬(0 ≤ x f + 1) ∨ ¬(0 ≤ f (x f)) ∨ f (x f) ≠ x f + 1) ∧
       (¬P f ∨ ¬(0 ≤ x f + 1) ∨ ¬(0 ≤ f (x f)) ∨ f (x f) ≠ x f + 1)