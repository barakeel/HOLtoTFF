(∀x. P x) ⇒ P (λx. x + 2)

(* Conversion theorem *)
 []
|- ¬((∀x. P x) ⇒ P (λx. x + 2)) ⇔
   ∃x.
     ∀f x'.
       (¬P f ∨ 0 ≤ x f) ∧ (P x' ∨ 0 ≤ x f) ∧
       (P x' ∨ ¬(0 ≤ x f + 2) ∨ ¬(0 ≤ f (x f)) ∨ f (x f) ≠ x f + 2) ∧
       (¬P f ∨ ¬(0 ≤ x f + 2) ∨ ¬(0 ≤ f (x f)) ∨ f (x f) ≠ x f + 2)